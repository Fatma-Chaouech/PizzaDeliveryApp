<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar"
    app:layout_marginBaseline="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_margin="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Order NOW!"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#393939"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/shadow_pizza" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="166dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Firstname"
            android:shadowColor="#00370505"
            android:textColor="#424242" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#006A5252">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtLastname"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Lastname"
            android:shadowColor="#00370505"
            android:textColor="#FF424242" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtAddress"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Address"
            android:shadowColor="#00370505"
            android:textColor="#FF424242" />

    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/radios"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioSmall"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:height="50dp"
            android:text="Small" />

        <RadioButton
            android:id="@+id/radioMedium"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:height="50dp"
            android:text="Medium" />

        <RadioButton
            android:id="@+id/radioLarge"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:height="50dp"
            android:text="Large" />
    </RadioGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chips2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipOnions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:foregroundGravity="center"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="Onions"
                android:textColor="#DDDCDC"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/black" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPeppers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:foregroundGravity="center"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="Peppers"
                android:textColor="#CFCFCF"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/black" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCheese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:foregroundGravity="center"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="Cheese"
                android:textColor="#DDDCDC"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/black" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMushrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:foregroundGravity="center"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="Mushrooms"
                android:textColor="#DDDCDC"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/black" />
        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chips1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPepperoni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:foregroundGravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="Pepperoni"
                android:textColor="#DDDCDC"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/black" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipChicken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:foregroundGravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="Chicken"
                android:textColor="#DDDCDC"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/black" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSausage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:foregroundGravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="Sausage"
                android:textColor="#DDDCDC"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/black" />

        </com.google.android.material.chip.ChipGroup>

    </com.google.android.material.chip.ChipGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            style="@android:style/Widget.Button"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/button_cancel"
            android:shadowDx="0"
            android:shadowDy="0"
            android:text="Cancel"
            android:textColor="#2B2A2A"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnConfirm"
            style="@android:style/Widget.Button"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button_confirm"
            android:text="Confirm"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>